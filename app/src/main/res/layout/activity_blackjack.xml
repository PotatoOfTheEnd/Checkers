<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#336600"
    tools:context="com.example.arielle.checkers.blackjack">


    <Button
        android:id="@+id/hitButton"
        android:layout_width="109dp"
        android:layout_height="69dp"
        android:text="Hit"
        android:textSize="24sp"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="208dp"/>

    <Button
        android:id="@+id/passButton"
        android:layout_width="109dp"
        android:layout_height="69dp"
        android:layout_marginBottom="208dp"
        android:layout_marginRight="35dp"
        android:text="Pass"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/cStack"
        android:layout_width="109dp"
        android:layout_height="132dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="53dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/no_cards_down_v3" />

    <ImageView
        android:id="@+id/Deck"
        android:layout_width="109dp"
        android:layout_height="132dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="53dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/deck"/>

    <Button
        android:id="@+id/rtnButton"
        android:layout_width="164dp"
        android:layout_height="56dp"
        android:textSize="14sp"
        android:text="Return to Start"
        android:layout_marginLeft="110dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="46dp"/>

</android.support.constraint.ConstraintLayout>